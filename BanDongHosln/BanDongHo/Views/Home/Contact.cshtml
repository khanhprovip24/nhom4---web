﻿@model BanDongHo.Models.ViewModel.ContactViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .validation {
            color: red;
        }
    </style>
}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="~/Home/Index">Home</a></li>
                <li class="active">Contact</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--contact-start-->
<div class="contact">
    <div class="container">
        <div class="contact-top heading">
            <h2>CONTACT</h2>
        </div>
        <div class="contact-text">
            <div class="col-md-3 contact-left">
                <div class="address">
                    <h5>Address</h5>
                    <p>
                        The company name,
                        <span>Lorem ipsum dolor,</span>
                        Glasglow Dr 40 Fe 72.
                    </p>
                </div>
                <div class="address">
                    <h5>Address1</h5>
                    <p>
                        Tel:1115550001,
                        <span>Fax:190-4509-494</span>
                        Email: <a href="mailto:example@email.com">contact@example.com</a>
                    </p>
                </div>
            </div>
            <div class="col-md-9 contact-right">
                <form action="Contact" method="post">
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "validation" })
                    <br />
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation" })
                    <br />
                    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", required = "" })
                    @Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone", required = "" })
                    <br /><br />
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "" })
                    @Html.ValidationMessageFor(m => m.Content)
                    @Html.TextAreaFor(m => m.Content, new { placeholder = "Message", required = "" })
                    <div class="submit-btn">
                        <input type="submit" value="SUBMIT">
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--contact-end-->
